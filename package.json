{
  "name": "blog",
  "version": "1.0.0",
  "repository": "https://github.com/josselinbuils/blog",
  "author": "Josselin Buils",
  "license": "MIT",
  "scripts": {
    "add:staged": "exec-staged 'git add' '\\.(js|md|tsx?|scss)$'",
    "build": "ts-node scripts/build.ts",
    "csscomb:staged": "exec-staged 'csscomb -tv' '\\.scss$'",
    "dev": "ts-node ./scripts/startDevServer.ts",
    "lint:staged": "exec-staged 'yarn lint' '\\.tsx?$'",
    "prettier:staged": "exec-staged 'prettier --write' '\\.(js|md|tsx?|scss)$'",
    "lint": "eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:staged && yarn prettier:staged && yarn csscomb:staged && yarn add:staged"
    }
  },
  "devDependencies": {
    "@josselinbuils/eslint-config-react": "^0.1.0",
    "@josselinbuils/exec-staged": "^0.1.1",
    "@josselinbuils/utils": "^0.1.2",
    "@types/classnames": "^2.2.11",
    "@types/express": "^4.17.9",
    "@types/fs-extra": "^9.0.4",
    "@types/glob": "^7.1.3",
    "@types/html-minifier": "^4.0.0",
    "@types/node": "^14.14.7",
    "@types/prismjs": "^1.16.2",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/sass": "^1.16.0",
    "@types/ws": "^7.4.0",
    "chalk": "^4.1.0",
    "chokidar": "^3.4.3",
    "classnames": "^2.2.6",
    "csscomb": "^4.3.0",
    "dayjs": "^1.9.6",
    "eslint": "^7.13.0",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "glob": "^7.1.6",
    "html-minifier": "^4.0.0",
    "husky": "^4.3.0",
    "postcss": "^8.1.7",
    "postcss-modules-sync": "^1.0.0",
    "prettier": "^2.1.2",
    "prismjs": "^1.22.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-markdown": "^5.0.2",
    "reading-time": "^1.2.0",
    "remark-gfm": "^1.0.0",
    "sass": "^1.29.0",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "ws": "^7.4.0"
  },
  "engines": {
    "node": ">=14"
  }
}
